﻿@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-1">
                    <div class="card-body">
                        <h3 class="card-title text-white">Products Sold</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.numberOfSoldProduct</h2>
                            <p class="text-white mb-0">2023 - Hiện tại</p>
                        </div>
                        <span class="float-right display-5 opacity-5">
                            <i class="fa fa-shopping-cart"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-2">
                    <div class="card-body">
                        <h3 class="card-title text-white">Net Profit</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.revenue.ToString("#,##0").Replace(",", ".") VNĐ</h2>
                            <p class="text-white mb-0">2023 - Hiện tại</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-3">
                    <div class="card-body">
                        <h3 class="card-title text-white">Tổng người dùng</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.numberOfUser</h2>
                        </div>
                        <span class="float-right display-5 opacity-5">
                            <i class="fa fa-users"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card gradient-4">
                    <div class="card-body">
                        <h3 class="card-title text-white">Customer Satisfaction</h3>
                        <div class="d-inline-block">
                            <h2 class="text-white">@ViewBag.satisfaction %</h2>
                            <p class="text-white mb-0">2023 - Hiện tại</p>
                        </div>
                        <span class="float-right display-5 opacity-5">
                            <i class="fa fa-heart"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
<!-- #/ container -->
