@model IEnumerable<WebApplication2.Models.STOCK_INVENTORY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
            </ol>
        </div>
    </div>
    <hr />

    <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Phiếu nhập</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="CreatePartialViewContainer">
                    <!-- The partial view will be loaded here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Phiếu nhập</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="edit-modal-body modal-body ">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Index", "STOCK_INVENTORY", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label>Tên nhà xuất bản: </label>
                <input type="Text" class="form-control mx-sm-3" value="@ViewBag.Keyword" name="searchString" placeholder="">
                <input type="submit" class="btn btn-danger" value="Tìm kiếm">
            </div><hr />
        }


    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Data Table</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.InventoryStockInTotal)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.InventoryStockOutTotal)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.InventoryAvailableStock)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.BOOK_EDITION.EditionID)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.BOOK_EDITION.EditionName)
                                        </th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InventoryStockInTotal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InventoryStockOutTotal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InventoryAvailableStock)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BOOK_EDITION.EditionID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BOOK_EDITION.EditionName)
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-primary" id="@item.EditionID" value="@item.EditionID" onclick="redirectToDetails(this.value)">
                                                Thông tin chi tiết
                                            </button>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
<script>
    function redirectToDetails(stockReceivedNoteID) {
        var url = "/Manager/STOCK_RECEIVED_NOTE_DETAIL/Index/" + stockReceivedNoteID;
        window.location.href = url;
    }
</script>
