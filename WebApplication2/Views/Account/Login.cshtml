@using WebApplication2.Models
@model LoginViewModel

<section id="loginForm" class="d-flex flex-column align-items-center">
	@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "bg-dark p-3 rounded", role = "form", style = "width: 400px;" }))
	{
		@Html.AntiForgeryToken()
		<h3 class="text-light text-center">Đăng nhập</h3>
		<hr class="bg-light" />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group text-light">
			@Html.LabelFor(m => m.Email, new { @class = "control-label" })
			@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
		</div>
		<div class="form-group text-light">
			@Html.LabelFor(m => m.Password, new { @class = "control-label" })
			@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
		</div>
		<div class="form-group">
			<div class="checkbox text-light">
				@Html.CheckBoxFor(m => m.RememberMe)
				@Html.LabelFor(m => m.RememberMe)
			</div>
		</div>
		<div class="form-group bg-primary mt-5">
			<input type="submit" value="Log in" class="h-100 w-100 btn btn-default text-light text-center" style="font-size: 20px" />
		</div>
		<p class="text-light">
			Chưa có tài khoản ? @Html.ActionLink("đăng kí", "Register")
		</p>
		@*<p>
				@Html.Actionlink("forgot your password?", "forgotpassword")
			</p>*@
	}
</section>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}