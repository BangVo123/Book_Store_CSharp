@model WebApplication2.Models.IndexViewModel
@using Microsoft.AspNet.Identity

<div class="container-fluid">
	<div class="container">
		<div class="row p-3 bg-dark" style="min-height: 500px">
			<div class="col-3 p-0 bg-dark">
				<div class="d-flex flex-column justify-content-between h-100">
					<div>
						<div class="text-center text-light mb-3 text-truncate" style="font-size: 20px">@User.Identity.Name</div>
						<ul class="nav nav-tabs flex-column" id="myTab" role="tablist">
							<li class="nav-item" role="presentation">
								<a class="nav-link active border-top-0 border-left-0 border-right-0 border-bottom border-light " id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Thông tin tài khoản</a>
							</li>
							<li class="nav-item" role="presentation">
								<a class="nav-link border-top-0 border-left-0 border-right-0 border-bottom border-light " id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Thông tin ví</a>
							</li>
							<li class="nav-item" role="presentation">
								<a class="nav-link border-top-0 border-left-0 border-right-0 border-bottom border-light " id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Lịch sử đặt hàng</a>
							</li>
						</ul>
					</div>
					@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "mt-auto" }))
					{
						@Html.AntiForgeryToken()
						<a class="btn btn-primary w-100" href="javascript:document.getElementById('logoutForm').submit()">Đăng xuất</a>
					}
				</div>
			</div>
			<div class="col-9 pr-0">
				<div class="tab-content w-100 h-100 bg-primary" id="myTabContent">
					<div class="tab-pane fade show active " id="home" role="tabpanel" aria-labelledby="home-tab">
						@Html.Partial("~/Views/User/UserDetail.cshtml")
					</div>
					<div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
						Thông tin ví
					</div>
					<div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
						Lịch sử đặt hàng
					</div>
				</div>
			</div>
		</div>



	</div>
